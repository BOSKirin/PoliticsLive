<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewCNN"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayoutGraphNational">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relativeLayoutNationalHeader"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:id="@+id/relativeLayout5"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Updated at 7:00 PM on 4/26/16"
                        android:id="@+id/text_view_update_api_2016_national_house_race"
                        android:textSize="10dp"
                        android:textAlignment="center"
                        android:layout_below="@+id/textView35"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="2016 National House Race"
                        android:id="@+id/textView35"
                        android:textColor="@color/colorMaterialGrey800"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textStyle="bold" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView31"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_action_overflow_vertical"
                    android:paddingLeft="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMaterialGrey300"
                android:id="@+id/viewDivider"
                android:layout_below="@+id/relativeLayoutNationalHeader"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chartHouseRace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayoutNationalHeader"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/relativeLayout6"
                android:layout_toStartOf="@+id/relativeLayout6"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:id="@+id/relativeLayout6"
                android:layout_below="@+id/relativeLayoutNationalHeader"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageViewHillary"
                    android:src="@drawable/democratic_party_sqaure"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageViewTrump"
                    android:src="@drawable/republican_party_square"
                    android:layout_below="@+id/imageViewHillary"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="50%"
                    android:id="@+id/textViewDemocratVotesHouseRace"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17dp"
                    android:textIsSelectable="false"
                    android:layout_alignLeft="@+id/textView127"
                    android:layout_alignStart="@+id/textView127"
                    android:layout_alignBottom="@+id/textView127"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="46%"
                    android:id="@+id/textViewRepublicanVotesHouseRace"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorRed"
                    android:textSize="17dp"
                    android:textIsSelectable="false"
                    android:layout_alignRight="@+id/textView158"
                    android:layout_alignEnd="@+id/textView158"
                    android:textStyle="bold"
                    android:layout_alignTop="@+id/textView158"
                    android:layout_alignBottom="@+id/imageViewTrump"
                    android:layout_alignLeft="@+id/textView158"
                    android:layout_alignStart="@+id/textView158"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Democrat"
                    android:id="@+id/textView127"
                    android:textColor="@color/colorMaterialGrey800"
                    android:textSize="15dp"
                    android:textIsSelectable="false"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageViewHillary"
                    android:layout_toEndOf="@+id/imageViewHillary"
                    android:layout_alignBottom="@+id/imageViewHillary"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Republican"
                    android:id="@+id/textView158"
                    android:textColor="@color/colorMaterialGrey800"
                    android:textSize="15dp"
                    android:textIsSelectable="false"
                    android:layout_alignLeft="@+id/textViewDemocratVotesHouseRace"
                    android:layout_alignStart="@+id/textViewDemocratVotesHouseRace"
                    android:layout_alignTop="@+id/imageViewTrump"
                    android:layout_marginTop="5dp" />

            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>