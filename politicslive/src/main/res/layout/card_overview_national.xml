<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewCNN"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayoutGraphNational">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relativeLayoutNationalHeader"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:id="@+id/relativeLayout5"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Updated at 7:00 PM on 4/26/16"
                        android:id="@+id/text_view_update_api_2016_general_election"
                        android:textSize="10dp"
                        android:textAlignment="center"
                        android:layout_below="@+id/textView35"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="2016 Presidential General Election"
                        android:id="@+id/textView35"
                        android:textColor="@color/colorMaterialGrey800"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textStyle="bold" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView31"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_action_overflow_vertical"
                    android:paddingLeft="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMaterialGrey300"
                android:id="@+id/viewDivider"
                android:layout_below="@+id/relativeLayoutNationalHeader"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chartNational"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewDivider"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/relativeLayout6"
                android:layout_marginTop="5dp"
                android:layout_alignRight="@+id/relativeLayoutNationalHeader"
                android:layout_toRightOf="@+id/relativeLayout6"
                android:layout_alignBottom="@+id/relativeLayout6"
                android:layout_marginBottom="-10dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:id="@+id/relativeLayout6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/viewDivider"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageViewHillary"
                    android:src="@drawable/hilary_circle_shadow"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageViewTrump"
                    android:src="@drawable/trump_circle_shadow"
                    android:layout_below="@+id/imageViewHillary"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="50%"
                    android:id="@+id/textViewHillaryVotesGeneral"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17dp"
                    android:textIsSelectable="false"
                    android:layout_alignLeft="@+id/textView127"
                    android:layout_alignStart="@+id/textView127"
                    android:layout_alignBottom="@+id/textView127"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="46%"
                    android:id="@+id/textViewTrumpVotesGeneral"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorRed"
                    android:textSize="17dp"
                    android:textIsSelectable="false"
                    android:layout_below="@+id/textViewHillaryVotesGeneral"
                    android:layout_alignLeft="@+id/textViewHillaryVotesGeneral"
                    android:layout_alignStart="@+id/textViewHillaryVotesGeneral"
                    android:layout_alignBottom="@+id/textView158"
                    android:layout_alignRight="@+id/textView158"
                    android:layout_alignEnd="@+id/textView158"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageViewGary"
                    android:src="@drawable/gary_circle_shadow"
                    android:layout_below="@+id/imageViewTrump"
                    android:layout_alignLeft="@+id/imageViewTrump"
                    android:layout_alignStart="@+id/imageViewTrump" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="12%"
                    android:id="@+id/textViewGaryVotesGeneral"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorMotionPressDN2C"
                    android:layout_below="@+id/imageViewTrump"
                    android:layout_alignBottom="@+id/imageViewGary"
                    android:textSize="17dp"
                    android:textIsSelectable="false"
                    android:layout_alignLeft="@+id/textViewTrumpVotesGeneral"
                    android:layout_alignStart="@+id/textViewTrumpVotesGeneral"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Clinton    "
                    android:id="@+id/textView127"
                    android:textColor="@color/colorMaterialGrey800"
                    android:textSize="15dp"
                    android:textIsSelectable="false"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageViewHillary"
                    android:layout_toEndOf="@+id/imageViewHillary"
                    android:layout_alignBottom="@+id/imageViewHillary"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Trump"
                    android:id="@+id/textView158"
                    android:textColor="@color/colorMaterialGrey800"
                    android:textSize="15dp"
                    android:textIsSelectable="false"
                    android:layout_below="@+id/textViewHillaryVotesGeneral"
                    android:layout_alignLeft="@+id/textView127"
                    android:layout_alignStart="@+id/textView127"
                    android:layout_above="@+id/textViewGaryVotesGeneral"
                    android:layout_marginTop="10dp"
                    android:layout_alignRight="@+id/textView127"
                    android:layout_alignEnd="@+id/textView127" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Johnson"
                    android:id="@+id/textView161"
                    android:textColor="@color/colorMaterialGrey800"
                    android:textSize="15dp"
                    android:textIsSelectable="false"
                    android:layout_below="@+id/textViewTrumpVotesGeneral"
                    android:layout_alignBottom="@+id/textViewGaryVotesGeneral"
                    android:layout_alignLeft="@+id/textView158"
                    android:layout_alignStart="@+id/textView158"
                    android:layout_toStartOf="@+id/textViewTrumpVotesGeneral"
                    android:layout_toRightOf="@+id/textView158"
                    android:layout_alignRight="@+id/textViewTrumpVotesGeneral"
                    android:layout_alignEnd="@+id/textViewTrumpVotesGeneral"
                    android:layout_marginTop="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/chartNational">

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2"
                    android:touchscreenBlocksFocus="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Data provided by"
                    android:id="@+id/textView183"
                    android:textColor="#616161"
                    android:gravity="center_vertical"
                    android:textSize="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textView184"
                    android:layout_toStartOf="@+id/textView184" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="HuffPost Pollster"
                    android:id="@+id/textView184"
                    android:textColor="@color/colorMaterialGrey800"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:textSize="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold" />
            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </RelativeLayout>


</LinearLayout>