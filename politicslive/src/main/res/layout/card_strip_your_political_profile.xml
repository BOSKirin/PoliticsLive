<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayoutStrip">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardViewRegisteredToVote"
                android:layout_width="80dp"
                android:layout_height="125dp"
                card_view:cardCornerRadius="4dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="7dp"
                    android:contextClickable="false"
                    android:id="@+id/relativeLayoutRegisteredToVote">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="Registered To Vote"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textSize="13dp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/textView85" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorMaterialGrey300"
                        android:id="@+id/viewDivider6"
                        android:layout_alignTop="@+id/textView85"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Yes!"
                        android:id="@+id/textView170"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@+id/textView85"
                        android:gravity="center"
                        android:textColor="@color/abc_search_url_text_normal"
                        android:textSize="30dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardViewPartyAffiliation"
                android:layout_width="80dp"
                android:layout_height="125dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="7dp"
                    android:contextClickable="false"
                    android:id="@+id/relativeLayoutPartyAffiliation">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="Party Affiliation"
                        android:id="@+id/textViewPoliticalPartyLabel"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textSize="13dp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageViewPoliticalPartyIcon"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/ic_action_dnc_color"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:padding="10dp"
                        android:layout_above="@+id/viewDivider5" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorMaterialGrey300"
                        android:id="@+id/viewDivider5"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/textViewPoliticalPartyLabel" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardViewCurrentVotePresidential"
                android:layout_width="80dp"
                android:layout_height="125dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="7dp"
                    android:contextClickable="false"
                    android:id="@+id/relativeLayoutCurrentVote">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="Presidential Vote"
                        android:id="@+id/textViewCurrentVoteLabel"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textSize="13dp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageViewCurrentVoteIcon"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/hilary_square"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_above="@+id/viewDivider7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorMaterialGrey300"
                        android:id="@+id/viewDivider7"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/textViewCurrentVoteLabel" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardViewCurrentVoteHouse"
                android:layout_width="80dp"
                android:layout_height="125dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="7dp"
                    android:contextClickable="false"
                    android:id="@+id/relativeLayoutHouse">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="House      Vote"
                        android:id="@+id/textViewCurrentVoteLabelHouse"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textSize="13dp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorMaterialGrey300"
                        android:id="@+id/viewDivider9"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/textViewCurrentVoteLabelHouse" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="DNC"
                        android:id="@+id/textViewHouseVote"
                        android:gravity="center"
                        android:textColor="@color/colorBlue"
                        android:textSize="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_above="@+id/textViewCurrentVoteLabelHouse"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardViewReminders"
                android:layout_width="80dp"
                android:layout_height="125dp"
                card_view:cardCornerRadius="4dp"
                android:layout_margin="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="7dp"
                    android:contextClickable="false"
                    android:id="@+id/relativeLayoutReminders">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="Reminders"
                        android:id="@+id/textViewRemindersLabel"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textSize="13dp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorMaterialGrey300"
                        android:id="@+id/viewDivider8"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="false"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/textViewRemindersLabel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="0"
                        android:id="@+id/textView171"
                        android:gravity="center"
                        android:textColor="@color/material_grey_600"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_above="@+id/textViewRemindersLabel"
                        android:textSize="35dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewSettings"
                android:src="@drawable/ic_action_settings_new"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>