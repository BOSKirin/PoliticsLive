<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/relativeLayout12"
        android:visibility="visible"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@color/colorMaterialGrey850"
        android:layout_marginBottom="1dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/imageViewEventSmallChannelPic"
            android:src="@drawable/nbc"
            android:layout_alignTop="@+id/linearLayout3"
            android:layout_toRightOf="@+id/linearLayout3"
            android:layout_toEndOf="@+id/linearLayout3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMaterialGrey700"
            android:layout_toEndOf="@+id/imageViewEventSmallChannelPic"
            android:id="@+id/relativeLayoutEventSmall"
            android:layout_toRightOf="@+id/imageViewEventSmallChannelPic"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="First Presidential Debate"
                android:id="@+id/textViewEventSmallName"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/imageView25"
                android:layout_toStartOf="@+id/imageView25"
                android:layout_marginLeft="15dp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:id="@+id/imageView25"
                android:src="@drawable/down_triangle_white"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/linearLayout3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="26"
                android:id="@+id/textViewEventSmallDay"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sep"
                android:id="@+id/textViewEventSmallMonth"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="13dp"
                android:textAlignment="center"
                android:layout_below="@+id/textViewEventSmallDay"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/textViewEventSmallDay"
                android:layout_alignEnd="@+id/textViewEventSmallDay"
                android:layout_marginTop="-5dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>