<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:id="@+id/linearLayoutDemographicsPoliticsLive">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="General Electorate"
        android:id="@+id/textViewElectoratePoliticsLive"
        android:layout_marginLeft="17dp"
        android:textColor="@color/colorMaterialGrey800"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-25dp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="90 total respondents"
        android:id="@+id/textViewTotalRespondentsPoliticsLive"
        android:layout_gravity="right"
        android:paddingTop="7dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/colorMaterialGrey800"
        android:textSize="12dp"
        android:visibility="visible" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewPoliticsLive"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="7dp"
            android:contextClickable="false"
            android:orientation="vertical"
            android:background="@color/colorDemographicBackground">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="1dp"
                android:id="@+id/relativeLayoutPersonalInformationPoliticsLive" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Personal Information"
                    android:id="@+id/textView166"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/imageViewArrowPersonalInformationPoliticsLive"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView166"
                    android:layout_toEndOf="@+id/textView166"
                    android:src="@drawable/down_triangle_white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/relativeLayoutRegisteredParty"
                android:background="@color/colorWhite"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Registered Democrats = "
                    android:id="@+id/textViewTotalVotersTitleLabel"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="-"
                    android:id="@+id/textViewTotalUsersPoliticsLive"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:background="@drawable/circle_dnc"
                    android:textColor="@color/colorMaterialGrey900"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textViewTotalVotersTitleLabel"
                    android:layout_toEndOf="@+id/textViewTotalVotersTitleLabel"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Users"
                    android:id="@+id/textView15"
                    android:textColor="@color/colorMaterialGrey800"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textViewTotalUsersPoliticsLive"
                    android:layout_toEndOf="@+id/textViewTotalUsersPoliticsLive"
                    android:layout_marginLeft="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:id="@+id/relativeLayoutTotalVotes"
                android:background="@color/colorWhite"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Total Votes for the Party = "
                    android:id="@+id/textViewTotalVotesLabel"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="-"
                    android:id="@+id/textViewTotalVotesPoliticsLive"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:background="@drawable/circle_dnc"
                    android:textColor="@color/colorMaterialGrey900"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textViewTotalVotesLabel"
                    android:layout_toEndOf="@+id/textViewTotalVotesLabel"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Votes"
                    android:id="@+id/textView19"
                    android:textColor="@color/colorMaterialGrey800"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textViewTotalVotesPoliticsLive"
                    android:layout_toEndOf="@+id/textViewTotalVotesPoliticsLive"
                    android:layout_marginLeft="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:id="@+id/relativeLayoutAverageAge"
                android:background="@color/colorWhite"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Average Age of Voter ="
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/textViewGenderLabelCNN" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="-"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:background="@drawable/circle_dnc"
                    android:textColor="@color/colorMaterialGrey900"
                    android:id="@+id/textViewAverageAgePoliticsLive"
                    android:layout_alignParentBottom="false"
                    android:layout_toRightOf="@+id/textViewGenderLabelCNN"
                    android:layout_toEndOf="@+id/textViewGenderLabelCNN"
                    android:layout_alignParentTop="false"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Years old"
                    android:id="@+id/textView20"
                    android:textColor="@color/colorMaterialGrey800"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textViewAverageAgePoliticsLive"
                    android:layout_toEndOf="@+id/textViewAverageAgePoliticsLive"
                    android:layout_marginLeft="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="1dp"
                android:id="@+id/relativeLayoutGenderAlt"
                android:background="@color/colorWhite"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Gender Breakdown = "
                    android:id="@+id/textViewRaceLabelCNN"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="-"
                    android:id="@+id/textViewMalePoliticsLive"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:background="@drawable/circle_dnc"
                    android:textColor="@color/colorMaterialGrey900"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textViewRaceLabelCNN"
                    android:layout_toEndOf="@+id/textViewRaceLabelCNN"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="-"
                    android:id="@+id/textViewFemalePoliticsLive"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:background="@drawable/circle_dnc"
                    android:textColor="@color/colorMaterialGrey900"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textViewMaleLabelCNN"
                    android:layout_toEndOf="@+id/textViewMaleLabelCNN"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="% Male"
                    android:id="@+id/textViewMaleLabelCNN"
                    android:textColor="@color/colorMaterialGrey800"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textViewMalePoliticsLive"
                    android:layout_toEndOf="@+id/textViewMalePoliticsLive"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="% Female"
                    android:id="@+id/textViewBlackLabelCNN"
                    android:textColor="@color/colorMaterialGrey800"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_alignTop="@+id/textViewMaleLabelCNN"
                    android:layout_toRightOf="@+id/textViewFemalePoliticsLive"
                    android:layout_toEndOf="@+id/textViewFemalePoliticsLive"
                    android:layout_marginLeft="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="1dp"
                android:id="@+id/relativeLayoutPoliticalBackgroundPoliticsLive" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Political Background"
                    android:id="@+id/textView167"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/imageViewArrowPoliticalBackgroundPoliticsLive"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView167"
                    android:layout_toEndOf="@+id/textView167"
                    android:src="@drawable/down_triangle_white" />
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>