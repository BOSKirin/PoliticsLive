<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bradleycooper.politicslive.RepublicansList">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView3"
        android:scrollIndicators="right"
        android:focusable="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="The republican party has long been the party which held the more conservative beliefs.  They were founded some years ago and a lot has happened."
                android:id="@+id/textView24"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:layout_marginTop="70dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imageView10"
                android:layout_toStartOf="@+id/imageView10"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentBottom="false"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Candidates Rankings"
                android:id="@+id/textView26"
                android:layout_below="@+id/include"
                android:layout_marginTop="20dp"
                android:layout_alignLeft="@+id/textView24"
                android:layout_alignStart="@+id/textView24" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="275dp"
                android:id="@+id/listViewDNC"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textView26"
                android:divider="@null"
                android:layout_marginTop="10dp" />

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/card_layout_voter_demographics"
                android:id="@+id/include"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/relativeLayoutBrowseUsers"
                android:layout_alignEnd="@+id/relativeLayoutBrowseUsers"
                android:layout_below="@+id/relativeLayoutBrowseUsers" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView10"
                android:src="@drawable/ic_action_gop_color"
                android:layout_alignTop="@+id/textView24"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView24"
                android:layout_marginTop="30dp"
                android:id="@+id/relativeLayoutBrowseUsers"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/layout_selector">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Voter Demographics"
                    android:id="@+id/textView22"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Breakdown of Voters"
                    android:id="@+id/textView27"
                    android:layout_below="@+id/textView22"
                    android:layout_alignLeft="@+id/textView22"
                    android:layout_alignStart="@+id/textView22" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="MORE"
                    android:id="@+id/textView29"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorRed"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/textView27"
                    android:layout_marginRight="25dp" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
