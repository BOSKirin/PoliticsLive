<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewDemocratic"
        android:layout_width="80dp"
        android:layout_height="125dp"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="7dp"
            android:contextClickable="false"
            android:id="@+id/relativeLayoutPoliticalPartySmall">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Democratic Party"
                android:id="@+id/textViewPoliticalPartyLabel"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textSize="13dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMaterialGrey300"
                android:id="@+id/viewDivider5"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/textViewPoliticalPartyLabel" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageViewPoliticalPartyIcon"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_action_dnc_color"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:layout_above="@+id/viewDivider5" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>