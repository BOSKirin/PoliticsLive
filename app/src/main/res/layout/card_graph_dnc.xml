<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayoutGraphDNC">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Democratic Primary"
                android:id="@+id/textView35"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Hilary Clinton is currently leading the polls in the 2016 presidential primary race for the Democratic bid.  Candidate Bernie Sanders follows closely..."
                android:id="@+id/textView38"
                android:layout_below="@+id/textView35"
                android:layout_alignLeft="@+id/textView35"
                android:layout_alignStart="@+id/textView35"
                android:layout_marginRight="220dp"
                android:layout_marginTop="40dp"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="MORE"
                android:id="@+id/relativeLayoutCardDemocrat"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/textView38"
                android:layout_alignStart="@+id/textView38"
                android:layout_marginBottom="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0 Votes"
                android:id="@+id/textViewDemChartLabel"
                android:gravity="center"
                android:layout_below="@+id/textView35"
                android:layout_alignLeft="@+id/textView35"
                android:layout_alignStart="@+id/textView35" />
            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/textViewDemChartLabel"
                android:layout_alignLeft="@+id/textViewDemChartLabel"
                android:layout_alignStart="@+id/textViewDemChartLabel"
                android:layout_marginTop="10dp" />



        </RelativeLayout>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chartDem"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/textViewRepChartLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="180dp"
            />
    </android.support.v7.widget.CardView>




</LinearLayout>