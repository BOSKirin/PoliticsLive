<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="7dp"
            android:contextClickable="false"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Candidate Name"
                android:id="@+id/textCandidateName"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:paddingBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/userPictureThumb"
                android:layout_toEndOf="@+id/userPictureThumb"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/userPictureThumb"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/bernie_square" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote Count:"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:id="@+id/textView9"
                android:layout_alignTop="@+id/textViewVoteCount"
                android:layout_toLeftOf="@+id/textViewVoteCount"
                android:layout_toStartOf="@+id/textViewVoteCount"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewVoteCount"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:text="0"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>