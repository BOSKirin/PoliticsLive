<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorWhite"
        android:layout_marginBottom="1dp"
        android:id="@+id/relativeLayoutUser">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:id="@+id/imageViewProfilePicture"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_action_contact_icon"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Display Name"
            android:id="@+id/textViewDisplayName"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewProfilePicture"
            android:layout_toEndOf="@+id/imageViewProfilePicture"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="username"
            android:id="@+id/textViewUsername"
            android:textSize="12dp"
            android:layout_below="@+id/textViewDisplayName"
            android:layout_alignLeft="@+id/textViewDisplayName"
            android:layout_alignStart="@+id/textViewDisplayName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=","
            android:id="@+id/textView51"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:textSize="12dp"
            android:layout_toLeftOf="@+id/textViewAge"
            android:layout_toStartOf="@+id/textViewAge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Male"
            android:id="@+id/textViewGender"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/textView51"
            android:layout_toStartOf="@+id/textView51"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:textSize="12dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="22"
            android:id="@+id/textViewAge"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=")"
            android:id="@+id/textView4"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:layout_toLeftOf="@+id/textViewGender"
            android:layout_toStartOf="@+id/textViewGender"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Republican"
            android:id="@+id/textViewParty"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:layout_toLeftOf="@+id/textView4"
            android:layout_toStartOf="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="("
            android:id="@+id/textView59"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:layout_toLeftOf="@+id/textViewParty"
            android:layout_toStartOf="@+id/textViewParty"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</LinearLayout>