<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewPoliticalParty"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        card_view:cardCornerRadius="4dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="7dp"
            android:contextClickable="false"
            android:id="@+id/relativeLayoutPoliticalParty">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Libertarian Party"
                android:id="@+id/textPoliticalPartyName"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageViewPoliticalParty"
                android:layout_toEndOf="@+id/imageViewPoliticalParty"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/imageViewPoliticalParty"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/republican_party_square"
                android:padding="10dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutDelegateInfo"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/textPoliticalPartyName"
                android:layout_toEndOf="@+id/textPoliticalPartyName"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="senate seats"
                    android:id="@+id/textView9"
                    android:layout_gravity="right"
                    android:layout_below="@+id/textView130"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="45"
                    android:id="@+id/textViewSenateSeats"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="right"
                    android:layout_below="@+id/textView130"
                    android:layout_toLeftOf="@+id/textView130"
                    android:layout_toStartOf="@+id/textView9"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="house seats"
                    android:id="@+id/textView130"
                    android:layout_gravity="right"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/textView9"
                    android:layout_alignStart="@+id/textView9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="45"
                    android:id="@+id/textViewHouseSeats"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/textView9"
                    android:layout_toStartOf="@+id/textView9"
                    android:layout_marginRight="5dp" />
            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>