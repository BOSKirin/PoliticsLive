<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bradleycooper.politicslive.DemocratsList">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView3"
        android:scrollIndicators="right"
        android:focusable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView10"
                    android:src="@drawable/ic_action_dnc_color"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="19dp"
                    android:layout_marginStart="19dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Hilary Clinton is currently leading the polls in the 2016 presidential primary race for the Democratic bid.  Candidate Bernie Sanders follows closely behind with less that 5% of the national vote compared to Hilary Clinton."
                    android:id="@+id/textView39"
                    android:textColor="@color/colorBlack"
                    android:textSize="13dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView10"
                    android:layout_toEndOf="@+id/imageView10"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:id="@+id/linearLayoutDemocratRanking"></LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/relativeLayoutRegisteredDemocrats"
                android:background="@drawable/layout_selector"
                android:layout_below="@+id/listViewGOP"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Registered Democrats"
                    android:id="@+id/textView40"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="#212121"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="SEE ALL"
                    android:id="@+id/textView42"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_marginRight="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="24dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="There are no registered Democrats yet."
                android:id="@+id/textViewWarning"
                android:layout_below="@+id/textView36"
                android:layout_alignLeft="@+id/textView36"
                android:layout_alignStart="@+id/textView36"
                android:textColor="#9e9e9e"
                android:layout_marginLeft="25dp"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutRegisteredDemocrats"
                android:showDividers="beginning|middle|end"
                android:layout_marginTop="5dp"></LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:id="@+id/relativeLayoutBrowseUsers"
                android:background="@drawable/layout_selector"
                android:layout_below="@+id/listViewGOP"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="35dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Voter Demographics"
                    android:id="@+id/textView36"
                    android:layout_marginLeft="15dp"
                    android:textColor="#212121" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Tap to expand"
                    android:id="@+id/textViewTapToExpand"
                    android:layout_below="@+id/textView36"
                    android:layout_alignLeft="@+id/textView36"
                    android:layout_alignStart="@+id/textView36"
                    android:textColor="#616161" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="MORE"
                    android:id="@+id/textView22"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="25dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="There are no registered Democrats to analyze yet."
                android:id="@+id/textViewWarning2"
                android:layout_below="@+id/textView36"
                android:layout_alignLeft="@+id/textView36"
                android:layout_alignStart="@+id/textView36"
                android:textColor="#9e9e9e"
                android:layout_marginLeft="25dp"
                android:visibility="gone"
                android:layout_marginTop="10dp" />

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/card_layout_voter_demographics"
                android:layout_below="@+id/relativeLayoutBrowseUsers"
                android:id="@+id/viewDemographics" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:id="@+id/viewDivider"
                android:layout_below="@+id/viewDemographics"
                android:layout_margin="25dp" />
            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/candidate_profile_resources"
                android:id="@+id/viewResources"
                android:layout_below="@+id/viewDivider" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
