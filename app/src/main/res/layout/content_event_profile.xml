<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textViewEventName"
                    android:textColor="@color/colorWhite"
                    android:paddingLeft="15dp"
                    android:textSize="25dp"
                    android:text="Event Name"
                    android:gravity="center_vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:autoText="false"
                    android:background="@color/colorMaterialGrey850" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/imageViewEventChannelPic"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout8"
                android:background="@drawable/layout_selector"
                android:layout_below="@+id/listViewGOP"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView153"
                    android:layout_marginLeft="17dp"
                    android:textColor="@color/colorMaterialGrey800"
                    android:textStyle="bold"
                    android:text="Rules of the Debate:" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="These are some things about the party you might want to know.  For example, I don&apos;t know what I am talking about."
                android:id="@+id/textViewEventDescription"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textColor="@color/colorMaterialGrey600" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout9"
                android:background="@drawable/layout_selector"
                android:layout_below="@+id/listViewGOP"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView154"
                    android:layout_marginLeft="17dp"
                    android:textColor="@color/colorMaterialGrey800"
                    android:textStyle="bold"
                    android:text="Broadcast Information:" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Anderson Cooper"
                android:id="@+id/textViewEventModerator"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textColor="@color/colorMaterialGrey600" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout10"
                android:background="@drawable/layout_selector"
                android:layout_below="@+id/listViewGOP"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textViewElectorateCNN"
                    android:layout_marginLeft="17dp"
                    android:textColor="@color/colorMaterialGrey800"
                    android:textStyle="bold"
                    android:text="Location:" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="New York City"
                android:id="@+id/textViewEventLocation"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textColor="@color/colorMaterialGrey600" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/profile_resources" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageViewBackButton"
        android:src="@drawable/arrow_back"
        android:onClick="BackNavigate"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/circle_back"
        android:padding="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:elevation="15dp" />
</LinearLayout>